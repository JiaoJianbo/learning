<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bravo.demo.ssm.dao.UserDao">
	<resultMap id="userResultMap" type="com.bravo.demo.ssm.entity.User">
		<id column="id" property="id" jdbcType="VARCHAR"/> <!-- jdbcType 参考 org.apache.ibatis.type.JdbcType -->
		<id column="username" property="username" jdbcType="VARCHAR"/>
		<id column="password" property="password" jdbcType="VARCHAR"/>
		<id column="gender" property="gender" jdbcType="CHAR"/>
		<id column="age" property="age" jdbcType="TINYINT"/>
		<id column="birthday" property="birthday" jdbcType="DATE"/>
		<id column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
		<id column="last_logon_time" property="lastLogonTime" jdbcType="TIMESTAMP"/>
		<id column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
	</resultMap>

	<sql id="all_columns">
		id, 
		username, 
		password, 
		gender, 
		age, 
		birthday, 
		create_date, 
		last_logon_time, 
		update_date
	</sql>
	
	

	<select id="getAllUser" resultMap="userResultMap">
		select 
		<include refid="all_columns" />
		from user
	</select>
	
	<select id="getUserById" resultMap="userResultMap" parameterType="java.lang.String">
		select 
		<include refid="all_columns" />
		from user
		<where>
			<if test="userId != null">
				id = #{userId}
			</if>
		</where>
	</select>
	
	<insert id="insertUser" parameterType="com.bravo.demo.ssm.entity.User">
		insert into user (id, username, password, gender, age, create_date, update_date) 
		values (#{id}, #{username}, #{passowrd}, #{gender}, #{age}, now(), now());
	</insert>

</mapper>